{
  "name": "sak-menubar",
  "repository": "https://github.com/moeinrahimi/sak-menubar",
  "author": "moein rahimi",
  "email": "imrrahimi@gmail.com",
  "version": "0.1.0",
  "description": "swiss army knife menubar",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build  --win --publish never",
    "deploy": "electron-builder build  --win  --publish always"
  },
  "build": {
    "publish": [
      {
        "provider": "github",
        "owner": "moeinrahimi",
        "repo": "sak-menubar"
      }
    ],
    "appId": "com.sak-menubar.app",
    "linux": {
      "category": "Utility",
      "description": "sak-menubar is packaged with handfull utils such as easy dns setting and currency update",
      "target": [
        "AppImage"
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icons/icon.png"
    }
  },
  "devDependencies": {
    "electron": "^15.5.5",
    "electron-builder": "^22.2.0"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "electron-updater": "^4.2.0",
    "github-remove-all-releases": "^1.0.1",
    "node-notifier": "^6.0.0",
    "sudo-prompt": "^9.1.1"
  }
}
